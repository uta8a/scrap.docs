---
import DefaultLayout from './DefaultLayout.astro'

const { id, title, description } = Astro.props.frontmatter
---

<DefaultLayout title={title} slug={id} description={description} url={`${Astro.site}articles/${id}`}>
  <div class="container">
    <div class="space-content my-12 px-20">
      <slot />
    </div>
  </div>
</DefaultLayout>
